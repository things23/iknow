.question
  = render "questions"
  - if @question.comments.any?
    .comments
      =render "comments"
    - if user_signed_in?
      p= link_to "add a comment", '', class: "add-comment-link"
      =form_for [@question, @comment], remote: true do |f|
        =f.label :body, "Comment"
        .comment-errors
        =f.text_area :body
        =f.submit "Add"
